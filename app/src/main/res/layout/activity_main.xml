
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/udacitylogo"
        android:alpha=".50" />

    <TextView
        android:id="@+id/udacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:textColor="#ffffff"
        android:text="Udacity"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/address_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2465 Latham St"
        android:textColor="#ffffff"
        android:layout_below="@id/udacity"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/address_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mountain View, CA 94043"
        android:textColor="#ffffff"
        android:layout_below="@id/address_number"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="650-555-5555"
        android:textColor="#ffffff"
        android:layout_below="@id/address_state"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/first_phrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="'Udacity,"
        android:textColor="#ffffff"
        android:background="#3194B8"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" where you learn to code beyond the norm.'"
        android:textColor="#ffffff"
        android:background="#3194B8"
        android:layout_marginTop="420dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
